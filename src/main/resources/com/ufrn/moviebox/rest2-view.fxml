<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ufrn.moviebox.Rest2Controller">
   <children>
      <ImageView fitHeight="422.0" fitWidth="750.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../imagens/interestelarAlugar.jpg" />
         </image>
      </ImageView>
      <Button fx:id="button2VoltarTelaMovie" layoutX="8.0" layoutY="2.0" mnemonicParsing="false" onAction="#clickButton2VoltarTelaMovie" prefHeight="22.0" prefWidth="54.0" style="-fx-background-color: orange; -fx-background-radius: 6px; -fx-background-radius: 6px;" text="Voltar">
         <font>
            <Font name="Ebrima" size="10.0" />
         </font>
      </Button>
      <MenuButton fx:id="buttonRestInterestellar" layoutX="480.0" layoutY="284.0" mnemonicParsing="false" onAction="#clickButtonRestInterestellar" prefHeight="33.0" prefWidth="205.0" style="-fx-background-color: orange;" text="                    Alugar filme">
         <items>
            <MenuItem fx:id="restButton7DaysInterestellar" mnemonicParsing="false" onAction="#clickButtonRestInterestellar7Days" text="7 dias por R$10,00" />
            <MenuItem fx:id="restButton30DaysInterestellar" mnemonicParsing="false" onAction="#clickButtonRestInterestellar30Days" text="30 dias por R$30,00" />
            <MenuItem fx:id="restButton3MonthsInterestellar" mnemonicParsing="false" onAction="#clickButtonRestInterestellar3Months" text="3 meses por R$60,00" />
         </items>
         <font>
            <Font name="Ebrima" size="12.0" />
         </font>
      </MenuButton>
      <Button fx:id="buttonUsuario" layoutX="670.0" layoutY="2.0" mnemonicParsing="false" onAction="#clickButtonUsuario" prefHeight="12.0" prefWidth="76.0" style="-fx-background-color: black;">
         <graphic>
            <ImageView fitHeight="31.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../imagens/avatar.jpg" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
