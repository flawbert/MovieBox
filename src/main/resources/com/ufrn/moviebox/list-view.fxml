      <Button fx:id="buttonVoltarTelaMovie" layoutX="417.0" layoutY="329.0" mnemonicParsing="false" onAction="#clickButtonVoltarTelaMovie" style="-fx-border-radius: 10px; -fx-background-color: orange;" text="Voltar">
